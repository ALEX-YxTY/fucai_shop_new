<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="143dp"
    android:background="@drawable/shape_dialog_round"
    >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="确定删除？"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/tv_black2"/>

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:text="您确定删除此条营业员信息吗？"
        android:layout_marginTop="31dp"
        android:layout_below="@id/dialog_title"
        android:layout_centerHorizontal="true"
        android:textColor="@color/tv_black4"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:textColor="#9B9B9B"
            android:text="取消"
            android:background="@drawable/shape_corner_left"/>

        <Button
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="确定"
            android:background="@drawable/shape_corner_right"/>
    </LinearLayout>

</RelativeLayout>
