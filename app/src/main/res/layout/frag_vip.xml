<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ff7a47">

    <include layout="@layout/title_bar_orange"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_rect_r5_white"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:paddingTop="19dp"
        android:paddingBottom="17dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_main_vip_edit_tel1"
            android:focusable="false"
            android:paddingBottom="@dimen/margin_20"
            android:paddingLeft="@dimen/margin_36"
            android:paddingRight="@dimen/margin_20"
            android:paddingTop="@dimen/margin_20" >

            <TextView
                android:id="@+id/tv_icon_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/coupon_scan"/>
            <EditText
                android:id="@+id/et_vip_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_toRightOf="@+id/tv_icon_scan"
                android:layout_toLeftOf="@+id/tv_clear_tel"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginRight="@dimen/margin_8"
                android:layout_centerVertical="true"
                android:inputType="phone"
                android:maxLength="14"
                android:singleLine="true"
                android:gravity="center"
                android:text=""
                android:textColorHint="@color/light_gray"
                android:textColor="@color/text_orange"
                android:textSize="@dimen/tv_64"
                />
            <TextView
                android:id="@+id/tv_clear_tel"
                android:layout_width="@dimen/tv_64"
                android:layout_height="@dimen/tv_64"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/popup_close"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tag_tel_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*请输入SN码"
            android:textColor="#898989"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_20"
            />

        <Button
            android:id="@+id/bt_verify"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/bg_btn_vip_edit_tel"
            android:text="验 证"
            android:textColor="#F4AF10"
            android:textSize="16sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_check_coupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect_r5_white"
        android:layout_marginTop="15dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fd4f01"
            android:textSize="14sp"
            android:text="查看已验卡券"
            android:drawableLeft="@drawable/icon_card"
            android:drawablePadding="12dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</LinearLayout>