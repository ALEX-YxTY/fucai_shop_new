<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <TextView
        android:id="@+id/tv_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        style="@style/recommend_tv1"
        android:layout_marginTop="16dp"
        />
    <TextView
        android:id="@+id/tv_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingRight="3dp"
        android:textSize="12sp"
        android:textColor="#e23a3a"
        android:text="——%"
        android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        style="@style/recommend_tv1"
        android:layout_marginRight="3dp"
        android:text="回报率: "
        android:layout_toLeftOf="@id/tv_percentage"
        />
    
    <LinearLayout
        android:id="@+id/ll_balls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_period"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

            <TextView
                android:id="@+id/red1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/selector_circle_redball_grey"
                android:padding="3dp"
                android:text="32"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_centerInParent="true"
                android:textColor="@drawable/selector_circle_redball_text_reverse"
                />

            <TextView
                android:id="@+id/red2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/selector_circle_redball_grey"
                android:padding="3dp"
                android:text="32"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_marginRight="12dp"
                android:textColor="@drawable/selector_circle_redball_text_reverse"
                />

            <TextView
                android:id="@+id/blue1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/selector_circle_blueball_grey"
                android:padding="3dp"
                android:text="32"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_centerInParent="true"
                android:textColor="@drawable/selector_circle_blueball_text_reverse"
                />


            <TextView
                android:id="@+id/blue2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/selector_circle_blueball_grey"
                android:padding="3dp"
                android:text="32"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_marginRight="12dp"
                android:layout_centerInParent="true"
                android:textColor="@drawable/selector_circle_blueball_text_reverse"
                />

            <TextView
                android:id="@+id/green1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/selector_circle_greenball_grey"
                android:padding="3dp"
                android:text="32"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_centerInParent="true"
                android:textColor="@drawable/selector_circle_greenball_text_reverse"
                />

            <TextView
                android:id="@+id/green2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/selector_circle_greenball_grey"
                android:padding="3dp"
                android:text="32"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="@drawable/selector_circle_greenball_text_reverse"
                />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d2d2d2"
        android:layout_below="@id/ll_balls"
        android:layout_marginTop="15dp"/>
</RelativeLayout>