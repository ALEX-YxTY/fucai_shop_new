<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/white"
    android:layout_marginTop="11dp"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_gray"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_gray"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="13dp"
        android:textSize="14sp"
        android:text="姓名："
        android:textColor="@color/tv_black3"/>
    <TextView
        android:id="@+id/tv_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_alignLeft="@id/tv_name"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:text="电话：15205148532"
        android:textColor="@color/bg_gray2"/>

    <TextView
        android:id="@+id/tv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tel"
        android:layout_alignLeft="@id/tv_name"
        android:layout_marginTop="3dp"
        android:textSize="12sp"
        android:text="账号：fucai123"
        android:textColor="@color/bg_gray2"/>

    <TextView
        android:id="@+id/tv_psw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_account"
        android:layout_alignLeft="@id/tv_name"
        android:layout_marginTop="3dp"
        android:textSize="12sp"
        android:text="密码：123456"
        android:textColor="@color/bg_gray2"/>

    <Button
        android:id="@+id/bt_delete"
        android:layout_width="72dp"
        android:layout_height="23dp"
        android:textColor="#ef5f5f"
        android:textSize="11sp"
        android:text="删除信息"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_bt_red"/>

    <Button
        android:id="@+id/bt_edit"
        android:layout_width="72dp"
        android:layout_height="23dp"
        android:textColor="#5f5f5f"
        android:textSize="11sp"
        android:text="修改资料"
        android:layout_alignBottom="@id/bt_delete"
        android:layout_toLeftOf="@id/bt_delete"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_bt_grey"/>
</RelativeLayout>