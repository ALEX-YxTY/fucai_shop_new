<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.meishipintu.fucaiShopNew.views.fragments.F0_AddInfoFrag"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:background="@color/bg_gray4"
        android:textSize="20sp"
        android:textColor="@color/tv_black2"
        android:text="奖励"/>

    <View
        android:id="@+id/iv_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_title"
        android:background="@color/bg_gray3"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray5"
        android:layout_below="@id/iv_divider">

        <TextView
            android:id="@+id/component2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="92dp"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:textColor="@color/tv_black2"
            android:text="完成信息填写后，即可享受福彩奖金"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/component1"
            android:layout_below="@id/component2"
            android:layout_marginTop="57dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bt_add_info"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_below="@id/component1"
            android:layout_marginTop="100dp"
            android:background="@drawable/shape_rect_r5_theme_orange"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="去填写信息"
            android:textStyle="bold"/>


    </RelativeLayout>


    <ViewStub
        android:id="@+id/stub_review"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/iv_divider"
        android:layout="@layout/stub_review">

    </ViewStub>
</RelativeLayout>
