<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/normal_bg"
    >

    <include layout="@layout/title_bar_white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/bt_stystem"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_centerInParent="true"
                android:textColor="#a0a0a0"
                android:text="系统"/>
            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#f5f5f9"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
            <View
                android:id="@+id/stystem_View"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:visibility="invisible"
                android:background="#fd4f00"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bt_natice"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_centerInParent="true"
                android:textColor="#a0a0a0"
                android:text="通知"/>
            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="#f5f5f9"
                android:layout_alignParentRight="true"/>
            <View
                android:id="@+id/natice_View"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:visibility="invisible"
                android:background="#fd4f00"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bt_teaching"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_centerInParent="true"
                android:textColor="#a0a0a0"
                android:text="教学"/>
            <View
                android:id="@+id/teaching_View"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:visibility="invisible"
                android:background="#fd4f00"/>
        </RelativeLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_notice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/normal_bg"
        android:divider="@null" />
</LinearLayout>
