<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dividers_color_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <RadioGroup
            android:id="@+id/rg_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/rb_vip"
                style="@style/my_tab"
                android:drawableTop="@drawable/bg_tab_vip"
                android:drawablePadding="5dp"
                android:text="@string/verify_conpun" />

            <RadioButton
                android:id="@+id/rb_reward"
                style="@style/my_tab"
                android:drawableTop="@drawable/btn_reword"
                android:drawablePadding="5dp"
                android:text="@string/reward" />

            <RadioButton
                android:id="@+id/rb_home"
                style="@style/my_tab"
                android:drawableTop="@drawable/btn_notice"
                android:drawablePadding="5dp"
                android:text="@string/sys_notice" />

            <RadioButton
                android:id="@+id/rb_mine"
                style="@style/my_tab"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/bg_tab_mine"
                android:text="@string/mine" />

        </RadioGroup>

    </LinearLayout>

</LinearLayout>